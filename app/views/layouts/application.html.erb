<!DOCTYPE html>
<html>
  <head>
    <title>QuickBytes</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_pack_tag 'application' %>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script>

      $(document).ready(function(){
        $(".option").hide();

        $("#0").click(function(){
          $("#10").slideToggle("slow");
        });
        $("#1").click(function(){
          $("#11").slideToggle("slow");
        });
        $("#2").click(function(){
          $("#12").slideToggle("slow");
        });
        $("#3").click(function(){
          $("#13").slideToggle("slow");
        });
        $("#4").click(function(){
          $("#14").slideToggle("slow");
        });
        $("#5").click(function(){
          $("#15").slideToggle("slow");
        });
        $("#6").click(function(){
          $("#16").slideToggle("slow");
        });
        $("#7").click(function(){
          $("#17").slideToggle("slow");
        });
        $("#8").click(function(){
          $("#18").slideToggle("slow");
        });
        $("#9").click(function(){
          $("#19").slideToggle("slow");
        });
      });
    </script>
  </head>

  <body>
    <div class="nav-bar">
      <% if user_signed_in? %>
        <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
      <% else %>
        <%= link_to 'Sign up', new_user_registration_path %>
        /
        <%= link_to 'Sign In', new_user_session_path %>
      <% end %>
      /
      <%= link_to 'Search', root_path %>
    </div>
    <%= yield %>
  </body>
</html>
